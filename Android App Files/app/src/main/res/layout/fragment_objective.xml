<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.devnet_mid_project.ObjectiveFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/v">

        <TextView
            android:id="@+id/txtObjective"
            android:layout_width="339dp"
            android:layout_height="131dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/days_one"
            android:text="Project Objectives"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtObj1"
            android:layout_width="338dp"
            android:layout_height="176dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="1. Aims to contribute to sustainability in the way that it readily provides insight as to how and where the electric energy is being use. "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtObjective" />

        <TextView
            android:id="@+id/txtObj2"
            android:layout_width="346dp"
            android:layout_height="217dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="2. It provides real-time information on household electrical demand and records historical measured data for future analysis, this system potentiates electric energy."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtObj1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>